<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastrar">

    <ImageButton
        android:id="@+id/bt_back_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/bt_back"/>

    <TextView
        android:id="@+id/Criando_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criando Conta"
        app:layout_constraintTop_toBottomOf="@id/bt_back_cadastro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        style="@style/criar_conta"/>

    <ImageView
        android:id="@+id/mail"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/mail"
        android:background="@null"
        app:layout_constraintRight_toRightOf="@id/Criando_conta"
        app:layout_constraintLeft_toLeftOf="@id/Criando_conta"
        app:layout_constraintTop_toBottomOf="@id/Criando_conta"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="E-mail:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintLeft_toLeftOf="@id/mail"
        android:layout_marginStart="-40dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_email_24"
        app:layout_constraintTop_toTopOf="@id/txt_email"
        app:layout_constraintLeft_toLeftOf="@id/txt_email"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu e-mail"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Crie uma senha:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintLeft_toLeftOf="@id/input_email"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_lock_24"
        app:layout_constraintTop_toTopOf="@id/txt_password"
        app:layout_constraintLeft_toLeftOf="@id/txt_password"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/See_Password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Confirme sua senha:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/See_Password"
        app:layout_constraintLeft_toLeftOf="@id/See_Password"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_lock_24"
        app:layout_constraintTop_toTopOf="@id/txt_password_again"
        app:layout_constraintLeft_toLeftOf="@id/txt_password_again"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/See_Password_again"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_again"
        style="@style/TextInputLayoutStyle"
        >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua senha novamente"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/dica1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- No mínimo 6 caracteres."
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/See_Password_again"
        app:layout_constraintLeft_toLeftOf="@id/See_Password_again"
        />
    <TextView
        android:id="@+id/dica2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- No mínimo 1 letra."
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/dica1"
        app:layout_constraintLeft_toLeftOf="@id/dica1"
        />

    <TextView
        android:id="@+id/entrar_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Já tem uma conta? Entre aqui"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/dica2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bolas1"
        app:layout_constraintTop_toBottomOf="@id/entrar_again"
        app:layout_constraintLeft_toLeftOf="@id/entrar_again"
        app:layout_constraintRight_toRightOf="@id/entrar_again"
        android:layout_marginTop="30dp"/>


    <ImageButton
        android:id="@+id/next_cadastro2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintTop_toTopOf="@id/entrar_again"
        app:layout_constraintLeft_toLeftOf="@id/entrar_again"
        app:layout_constraintRight_toRightOf="@id/entrar_again"
        android:layout_marginRight="-320dp"
        android:layout_marginTop="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>