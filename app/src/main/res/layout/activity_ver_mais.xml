<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerMais">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="674dp"
        android:fillViewport="true"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_fav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ic_baseline_navigate_before_24"
                android:backgroundTint="@color/dark_grey" />


            <ImageView
                android:id="@+id/Titulo_verMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/logocopia" />

            <ImageButton
                android:id="@+id/bt_search_verMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="50dp"
                android:background="@null"
                android:src="@drawable/procurar" />

            <ImageView
                android:id="@+id/img_produto"
                android:layout_width="130dp"
                android:layout_height="170dp"
                android:layout_alignTop="@id/Titulo_verMais"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/ruffles2" />

            <TextView
                android:id="@+id/produto_nome"
                style="@style/criar_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img_produto"
                android:layout_centerInParent="true"
                android:layout_marginTop="170dp"
                android:text="Batata Ruffles Original 167g"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/barra_aviso"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_alignTop="@id/produto_nome"
                android:layout_centerInParent="true"
                android:layout_marginTop="44dp"
                android:background="@drawable/borda_cinza"
                android:textColorHint="@color/light_grey" />

            <TextView
                android:id="@+id/aviso"
                style="@style/criar_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/barra_aviso"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="Avisos"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/icon_aviso"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@id/barra_aviso"
                android:layout_alignTop="@id/barra_aviso"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_comment_24"
                android:rotationY="180" />

            <ImageView
                android:id="@+id/barra_aviso2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_alignTop="@id/aviso"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/barra"
                android:backgroundTint="@color/light_grey" />

            <TextView
                android:id="@+id/txt_aviso"
                style="@style/criar_conta"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/barra_aviso2"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="Esse produto não é indicado para você de acordo com as suas restrições:"
                android:textColor="@color/light_grey"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/restri_nome"
                style="@style/btVerMais"
                android:layout_width="125dp"
                android:layout_height="28dp"
                android:layout_alignStart="@id/txt_aviso"
                android:layout_alignTop="@id/txt_aviso"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/borda_restri_vermais"
                android:hint="Intolerância à Gluten"
                android:paddingTop="4dp"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/barra2_aviso"
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_alignTop="@id/barra_aviso"
                android:layout_centerInParent="true"
                android:layout_marginTop="180dp"
                android:background="@drawable/borda_cinza"
                android:textColorHint="@color/light_grey" />

            <TextView
                android:id="@+id/Ingredientes"
                style="@style/criar_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/barra2_aviso"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="Ingredientes"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/icon_ingredientes"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@id/barra2_aviso"
                android:layout_alignTop="@id/barra2_aviso"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_shopping_cart_24"
                android:rotationY="180" />

            <ImageView
                android:id="@+id/barra2_aviso2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_alignTop="@id/Ingredientes"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/barra"
                android:backgroundTint="@color/light_grey" />

            <TextView
                android:id="@+id/txt_aviso2"
                style="@style/criar_conta"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/barra2_aviso2"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="@string/dica_vermais"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="15sp" />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottomAppBar_verMais"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="-34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/home_barra"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="380dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:id="@+id/icon_home_verMais"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            android:backgroundTint="@color/dark_grey"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_verMais"
            app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_verMais"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_verMais"
            android:layout_marginTop="-45dp"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/fav_icon_verMais"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/fav"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_verMais"
            app:layout_constraintLeft_toLeftOf="@id/icon_home_verMais"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_verMais"
            android:layout_marginTop="-28dp"
            android:layout_marginStart="125dp"
            />


        <ImageButton
            android:id="@+id/icon_perfil_verMais"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/perfil"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_verMais"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_verMais"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="340dp"
            />

        <ImageButton
            android:id="@+id/restri_icon_verMais"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_verMais"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_verMais" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restrições"
            android:layout_marginStart="225dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginStart="335dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

    </com.google.android.material.appbar.AppBarLayout>



</androidx.constraintlayout.widget.ConstraintLayout>