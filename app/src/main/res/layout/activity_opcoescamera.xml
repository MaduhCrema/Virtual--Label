<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/img_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="-70dp"
        android:backgroundTint="@color/red"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_baseline_camera_alt_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_camera"
        app:layout_constraintRight_toRightOf="@id/img_camera"
        app:layout_constraintLeft_toLeftOf="@id/img_camera"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="CÃ¢mera"/>

    <ImageButton
        android:id="@+id/img_galeria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_camera"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/red"
        android:background="@drawable/ic_baseline_image_search_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_galeria"
        app:layout_constraintRight_toRightOf="@id/img_galeria"
        app:layout_constraintLeft_toLeftOf="@id/img_camera"
        android:layout_marginStart="80dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Galeria"/>

</androidx.constraintlayout.widget.ConstraintLayout>