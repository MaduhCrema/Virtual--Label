<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/celular_log"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/logopng"
        android:layout_marginTop="-400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/log_titulo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/vt"
        android:backgroundTint="@color/red"
        app:layout_constraintLeft_toLeftOf="@id/celular_log"
        app:layout_constraintRight_toRightOf="@id/celular_log"
        app:layout_constraintTop_toBottomOf="@id/celular_log" />

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Cadastrar-se"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/log_titulo"
        app:layout_constraintLeft_toLeftOf="@id/log_titulo"
        app:layout_constraintRight_toRightOf="@id/log_titulo"
        android:layout_marginTop="76dp"
        android:background="@drawable/borda"
        style="@style/btCadastrar"/>

    <ImageButton
        android:id="@+id/btGoogle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Entrar com o Google"
        android:textColorHint="@color/light_grey"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btCadastrar"
        app:layout_constraintLeft_toLeftOf="@id/btCadastrar"
        app:layout_constraintRight_toRightOf="@id/btCadastrar"
        android:layout_marginTop="44dp"
        android:background="@drawable/borda_cinza"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/google_logo"
        app:layout_constraintTop_toTopOf="@id/btGoogle"
        app:layout_constraintLeft_toLeftOf="@id/btGoogle"
        app:layout_constraintTop_toBottomOf="@id/btGoogle"
        android:layout_marginTop="10dp"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/text_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Entrar com o google"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@id/btGoogle"
        app:layout_constraintLeft_toLeftOf="@id/btGoogle"
        app:layout_constraintRight_toRightOf="@id/btGoogle"
        app:layout_constraintTop_toTopOf="@id/btGoogle" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="@color/red"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btGoogle"
        app:layout_constraintLeft_toLeftOf="@id/btGoogle"
        app:layout_constraintRight_toRightOf="@id/btGoogle"
        android:background="@drawable/borda"
        style="@style/btEntrar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>