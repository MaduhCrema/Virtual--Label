<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00ECECEC"
    android:foregroundTint="#00FFFFFF"
    tools:context=".home">


    <ImageView
        android:id="@+id/Titulo_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/logocopia" />

    <ImageButton
        android:id="@+id/bt_close_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="@color/dark_grey"
        />

    <ImageButton
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Titulo_home"
        app:layout_constraintTop_toTopOf="@id/Titulo_home"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/procurar"/>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Titulo_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/logo" />



    <ImageView
        android:layout_width="45dp"
        android:layout_height="4dp"
        android:background="@drawable/barra"
        app:layout_constraintTop_toTopOf="@id/bottomAppBar"
        app:layout_constraintLeft_toLeftOf="@id/bottomAppBar"
        android:layout_marginTop="0dp"
        android:translationZ="90dp"
        android:layout_marginStart="20.5dp"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/home_barra"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="380dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:id="@+id/icon_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar"
            app:layout_constraintLeft_toLeftOf="@id/bottomAppBar"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar"
            android:layout_marginTop="-45dp"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/fav_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/fav"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar"
            app:layout_constraintLeft_toLeftOf="@id/icon_home"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar"
            android:layout_marginTop="-28dp"
            android:layout_marginStart="125dp"
            />


        <ImageButton
            android:id="@+id/restri_icon"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar" />

        <ImageButton
            android:id="@+id/icon_perfil"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/perfil"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="340dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restrições"
            android:layout_marginStart="225dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginStart="335dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

    </com.google.android.material.appbar.AppBarLayout>




</androidx.constraintlayout.widget.ConstraintLayout>