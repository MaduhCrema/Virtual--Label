<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovaSenha">

    <ImageButton
        android:id="@+id/back_entrar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_close_24"
        style="@style/bt_back"/>

    <TextView
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie uma Nova Senha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        style="@style/criar_conta"/>


    <ImageView
        android:id="@+id/imgSenha"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/novasenha"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSenha"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Crie uma senha:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgSenha"
        app:layout_constraintLeft_toLeftOf="@id/imgSenha"
        android:layout_marginStart="-18dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_lock_24"
        app:layout_constraintTop_toTopOf="@id/new_password"
        app:layout_constraintLeft_toLeftOf="@id/new_password"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NSeePassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/new_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Confirme sua senha:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/NSeePassword"
        app:layout_constraintLeft_toLeftOf="@id/NSeePassword"
        android:layout_marginStart="31dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_lock_24"
        app:layout_constraintTop_toTopOf="@id/new_password_again"
        app:layout_constraintLeft_toLeftOf="@id/new_password_again"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NSee_Password_again"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password_again"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha novamente"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/dica1_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- No mínimo 6 caracteres."
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/NSee_Password_again"
        app:layout_constraintLeft_toLeftOf="@id/NSee_Password_again"
        />
    <TextView
        android:id="@+id/dica2_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- No mínimo 1 letra."
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/dica1_new"
        app:layout_constraintLeft_toLeftOf="@id/dica1_new"
        />

    <Button
        android:id="@+id/bt_nova_senha"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:hint="Pronto"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dica2_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/borda"
        style="@style/btCadastrar"/>

</androidx.constraintlayout.widget.ConstraintLayout>