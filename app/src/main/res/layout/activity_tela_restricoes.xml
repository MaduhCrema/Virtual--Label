<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00ECECEC"
    android:foregroundTint="#00FFFFFF"
    tools:context=".tela_restricoes">

    <ImageView
        android:id="@+id/Titulo_restri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/logocopia" />

    <ImageButton
        android:id="@+id/bt_search_restri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Titulo_restri"
        app:layout_constraintTop_toTopOf="@id/Titulo_restri"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/procurar"/>


    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Titulo_restri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Restrições"
        style="@style/criar_conta"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/barra_restri"
        android:layout_width="360dp"
        android:layout_height="2.5dp"
        android:background="@drawable/barra"
        app:layout_constraintTop_toBottomOf="@id/Titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-5dp"
        />


    <ImageView
        android:id="@+id/exe_restri"
        android:layout_width="340dp"
        android:layout_height="110dp"
        android:textColorHint="@color/light_grey"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/barra_restri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        android:background="@drawable/borda_cinza"
        />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/txt_restri3"
        app:layout_constraintLeft_toLeftOf="@id/txt_restri3"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_circle_24"
        />

    <TextView
        android:id="@+id/txt_restri3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/barra_restri2"
        app:layout_constraintLeft_toLeftOf="@id/barra_restri2"
        android:text="Intolerância à Glúten"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="65dp"
        />

    <ImageView
        android:id="@+id/img_dining"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_local_dining_24"
        app:layout_constraintTop_toTopOf="@id/exe_restri"
        app:layout_constraintLeft_toLeftOf="@id/exe_restri"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/txt_restri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/exe_restri"
        app:layout_constraintLeft_toLeftOf="@id/exe_restri"
        android:text="Restrições Alimentares"
        android:textSize="22sp"
        android:layout_marginTop="9dp"
        style="@style/criar_conta"
        android:layout_marginStart="65dp"
        />

    <ImageView
        android:id="@+id/barra_restri2"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@drawable/barra"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/txt_restri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        />


    <ImageView
        android:layout_width="45dp"
        android:layout_height="4dp"
        android:background="@drawable/barra"
        app:layout_constraintTop_toTopOf="@id/bottomAppBar_restri"
        app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_restri"
        android:layout_marginTop="0dp"
        android:translationZ="90dp"
        android:layout_marginStart="230dp"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottomAppBar_restri"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="-34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/home_barra"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="380dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:id="@+id/icon_home_restri"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            android:backgroundTint="@color/dark_grey"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_restri"
            app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_restri"
            android:layout_marginTop="-45dp"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/fav_icon_restri"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/fav"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_restri"
            app:layout_constraintLeft_toLeftOf="@id/icon_home_restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_restri"
            android:layout_marginTop="-28dp"
            android:layout_marginStart="125dp"
            />


        <ImageButton
            android:id="@+id/restri_icon_restri"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/restri"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_restri"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_restri" />

        <ImageButton
            android:id="@+id/icon_perfil_restri"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/perfil"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_restri"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="340dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restrições"
            android:layout_marginStart="225dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginStart="335dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

    </com.google.android.material.appbar.AppBarLayout>




</androidx.constraintlayout.widget.ConstraintLayout>