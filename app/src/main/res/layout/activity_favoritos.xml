<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00ECECEC"
    android:foregroundTint="#00FFFFFF"
    tools:context=".favoritos">

    <ImageView
        android:id="@+id/Titulo_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/logocopia" />

    <ImageButton
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Titulo_fav"
        app:layout_constraintTop_toTopOf="@id/Titulo_fav"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/procurar"/>


    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Titulo_fav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Favoritos"
        style="@style/criar_conta"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/barra_fav"
        android:layout_width="360dp"
        android:layout_height="2.5dp"
        android:background="@drawable/barra"
        app:layout_constraintTop_toBottomOf="@id/Titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-5dp"
        />

    <ImageView
        android:id="@+id/dica_fav"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/barra_fav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/borda_vermelha"/>

    <TextView
        android:id="@+id/txt_fav"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/txt_fav"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="@id/dica_fav"
        app:layout_constraintLeft_toLeftOf="@id/dica_fav"
        app:layout_constraintRight_toRightOf="@id/dica_fav"/>

    <ImageView
        android:id="@+id/exe_fav"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:textColorHint="@color/light_grey"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dica_fav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        android:background="@drawable/borda_cinza"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ruffles"
        app:layout_constraintTop_toTopOf="@id/exe_fav"
        app:layout_constraintLeft_toLeftOf="@id/exe_fav"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/exe_fav"
        app:layout_constraintLeft_toLeftOf="@id/exe_fav"
        android:text="Batata Ruffles Original 167g"
        android:textColor="@color/dark_grey"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        android:layout_marginStart="75dp"
        />

    <ImageButton
        android:id="@+id/fav_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_star_24"
        app:layout_constraintTop_toTopOf="@id/exe_fav"
        app:layout_constraintRight_toRightOf="@id/exe_fav"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        />

    <Button
        android:id="@+id/bt_verMais"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:hint="Ver Mais"
        android:textColorHint="@color/white"
        android:textSize="10sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dica_fav"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        style="@style/btVerMais"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bubble"
        app:layout_constraintTop_toTopOf="@id/dica_fav"
        app:layout_constraintLeft_toLeftOf="@id/dica_fav"
        android:layout_margin="5dp"/>


    <ImageView
        android:layout_width="45dp"
        android:layout_height="4dp"
        android:background="@drawable/barra"
        app:layout_constraintTop_toTopOf="@id/bottomAppBar_fav"
        app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_fav"
        android:layout_marginTop="0dp"
        android:translationZ="90dp"
        android:layout_marginStart="115dp"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottomAppBar_fav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="-34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/home_barra"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="380dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:id="@+id/icon_home_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            android:backgroundTint="@color/dark_grey"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_fav"
            app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_fav"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_fav"
            android:layout_marginTop="-45dp"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/fav_icon_fav"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/fav"
            android:backgroundTint="@color/red"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_fav"
            app:layout_constraintLeft_toLeftOf="@id/icon_home_fav"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_fav"
            android:layout_marginTop="-28dp"
            android:layout_marginStart="125dp"
            />


        <ImageButton
            android:id="@+id/restri_icon_fav"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_fav"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_fav" />

        <ImageButton
            android:id="@+id/icon_perfil_fav"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/perfil"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_fav"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_fav"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="340dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restrições"
            android:layout_marginStart="225dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginStart="335dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

    </com.google.android.material.appbar.AppBarLayout>




</androidx.constraintlayout.widget.ConstraintLayout>