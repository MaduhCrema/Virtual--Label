<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entrar">


    <ImageButton
        android:id="@+id/bt_back_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/bt_back"/>

    <ImageView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/about2"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-5dp"
        style="@style/criar_conta"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="User:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txtLogin"
        app:layout_constraintLeft_toLeftOf="@id/txtLogin"
        android:layout_marginStart="-85dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/user_nome"
        app:layout_constraintTop_toTopOf="@id/txt_email"
        app:layout_constraintLeft_toLeftOf="@id/txt_email"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu userName"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Senha:"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="@id/email"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_lock_24"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintLeft_toLeftOf="@id/password"
        android:layout_marginStart="-30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SeePassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        style="@style/TextInputLayoutStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/irNovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="Esqueceu sua senha?"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toBottomOf="@id/SeePassword"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Button
        android:id="@+id/bt_entrar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Entrar"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/SeePassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/borda"
        style="@style/btCadastrar"/>


    <TextView
        android:id="@+id/irCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/criar_conta"
        android:text="NÃ£o tem uma conta? Cadastre-se"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/bt_entrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>