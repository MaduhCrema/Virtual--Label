<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <ImageButton
        android:id="@+id/back_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_navigate_before_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/dark_grey"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/back_home"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:background="@null"
        android:layout_marginTop="19dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:hint="Pesquise por uma comida aqui"
        android:textColorHint="@color/dark_grey"/>

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="260dp"
        android:layout_height="280dp"
        android:background="@drawable/pesquisa3"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/dica_search"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="Digite o nome de algum produto ou palavra-chave para fazer a pesquisa."
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="17sp"/>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottomAppBar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/home_barra"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="380dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:id="@+id/icon_home_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_search"
            app:layout_constraintLeft_toLeftOf="@id/bottomAppBar_search"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_search"
            android:layout_marginTop="-42dp"
            android:backgroundTint="@color/dark_grey"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/fav_icon_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/fav"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_search"
            app:layout_constraintLeft_toLeftOf="@id/icon_home_search"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_search"
            android:layout_marginTop="-27dp"
            android:layout_marginStart="125dp"
            />


        <ImageButton
            android:id="@+id/restri_icon_search"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/restri"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_search"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_search" />

        <ImageButton
            android:id="@+id/icon_perfil_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/perfil"
            app:layout_constraintTop_toTopOf="@id/bottomAppBar_search"
            app:layout_constraintBottom_toBottomOf="@id/bottomAppBar_search"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="340dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restrições"
            android:layout_marginStart="225dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:layout_marginStart="335dp"
            android:layout_marginTop="-19dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:translationZ="90dp"/>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>